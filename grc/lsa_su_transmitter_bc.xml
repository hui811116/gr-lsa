<?xml version="1.0"?>
<block>
  <name>Su Transmitter</name>
  <key>lsa_su_transmitter_bc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.su_transmitter_bc($lengthtagname, $sensing_tag, $accesscode, 
    $hdr_const, $pld_const, $qmax,$mode,$debug)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Length Tag</name>
    <key>lengthtagname</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <param>
    <name>Sensing Info Tag</name>
    <key>sensing_tag</key>
    <value>"sensing"</value>
    <type>string</type>
  </param>
  <param>
    <name>Access code</name>
    <key>accesscode</key>
    <value>1111000011110000</value>
    <type>string</type>
  </param>
  <param>
    <name>Header Constellation</name>
    <key>hdr_const</key>
    <type>raw</type>
  </param>
  <param>
    <name>Payload Constellation</name>
    <key>pld_const</key>
    <type>raw</type>
  </param>
  <param>
    <name>Queue Capacity</name>
    <key>qmax</key>
    <value>1024</value>
    <type>int</type>
  </param>
  <param>
    <name>Mode</name>
    <key>mode</key>
    <value>0</value>
    <type>int</type>
      <option>
        <name>Active</name>
        <key>0</key>
      </option>
      <option>
        <name>Passive</name>
        <key>1</key>
      </option>
      <option>
        <name>Successive</name>
        <key>2</key>
      </option>
  </param>
  <param>
    <name>Debug Mode</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
      <option>
        <name>Yes</name>
        <key>True</key>
      </option>
      <option>
        <name>No</name>
        <key>False</key>
      </option>
  </param>

<!--
  <param>
    <name></name>
    <key></key>
    <value></value>
    <type></type>
  </param>
-->

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <sink>
    <name>sensing_info</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>debug</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
