<?xml version="1.0"?>
<block>
  <name>Burst Synchronizer</name>
  <key>lsa_burst_synchronizer_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.burst_synchronizer_cc($minLen, $sps,$window,$arity)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Minimum burst length</name>
    <key>minLen</key>
    <value>200</value>
    <type>int</type>
  </param>
  <param>
    <name>samples per symbol</name>
    <key>sps</key>
    <value>4</value>
    <type>int</type>
  </param>
  <param>
    <name>fft window</name>
    <key>window</key>
    <type>float_vector</type>
  </param>
  <param>
    <name>MPSK arity</name>
    <key>arity</key>
    <value>4</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
