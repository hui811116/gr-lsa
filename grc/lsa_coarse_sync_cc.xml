<?xml version="1.0"?>
<block>
  <name>Coarse Sync</name>
  <key>lsa_coarse_sync_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.coarse_sync_cc($thres,$sps,$ed)</make>
  <callback>set_ed_threshold($ed)</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>threshold</name>
    <key>thres</key>
    <type>float</type>
  </param>
  <param>
    <name>Samples per symbol</name>
    <key>sps</key>
    <type>int</type>
  </param>
  <param>
    <name>ED level(db)</name>
    <key>ed</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>corr</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>norm</name>
    <type>float</type>
  </sink>
  <sink>
    <name>eng</name>
    <type>float</type>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>msg_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
