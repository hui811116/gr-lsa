<?xml version="1.0"?>
<block>
  <name>Polyphase Costas Synchronizer</name>
  <key>lsa_poly_costas_sync_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.poly_costas_sync_cc($plf_sps,$plf_loop_bw,$plf_taps, $plf_nfilts,$costas_loop_bw,$costas_order,$sense_tag)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Polyphase sample per symbol</name>
    <key>plf_sps</key>
    <type>real</type>
  </param>
  <param>
    <name>Polyphase loop bandwidth</name>
    <key>plf_loop_bw</key>
    <type>real</type>
  </param>
  <param>
    <name>Polyphase taps</name>
    <key>plf_taps</key>
    <type>real_vector</type>
  </param>
  <param>
    <name>Polyphase number of filters</name>
    <key>plf_nfilts</key>
    <type>int</type>
  </param>
  <param>
    <name>Costas Loop Bandwidth</name>
    <key>costas_loop_bw</key>
    <type>real</type>
  </param>
  <param>
    <name>Costas Loop Order</name>
    <key>costas_order</key>
    <type>int</type>
  </param>
  <param>
    <name>Sense Tag Name</name>
    <key>sense_tag</key>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
