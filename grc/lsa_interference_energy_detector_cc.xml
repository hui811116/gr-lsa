<?xml version="1.0"?>
<block>
  <name>Interference Energy Detector</name>
  <key>lsa_interference_energy_detector_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.interference_energy_detector_cc($ed_thres, $voe_thres,$blocklength,$minlen,$debug)</make>
  <callback>set_ed_threshold($ed_thres)</callback>
  <callback>set_voe_threshold($voe_thres)</callback>
  <callback>set_blocklength($blocklength)</callback>
  <callback>set_min_length($minlen)</callback>
  <param>
    <name>ED threshold(dB)</name>
    <key>ed_thres</key>
    <type>float</type>
  </param>
  <param>
    <name>VoE threshold(dB)</name>
    <key>voe_thres</key>
    <type>float</type>
  </param>
  <param>
    <name>Blocklength</name>
    <key>blocklength</key>
    <type>int</type>
  </param>
  <param>
    <name>Interference Min length</name>
    <key>minlen</key>
    <type>int</type>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
      <option>
        <name>Yes</name>
        <key>True</key>
      </option>
      <option>
        <name>No</name>
        <key>False</key>
      </option>
  </param>
  
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>ED</name>
    <type>float</type>
    <optional>1</optional>
  </source>
  <source>
    <name>VoE</name>
    <type>float</type>
    <optional>1</optional>
  </source>
  
</block>
