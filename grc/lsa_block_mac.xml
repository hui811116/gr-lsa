<?xml version="1.0"?>
<block>
  <name>Block Mac</name>
  <key>lsa_block_mac</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.block_mac($addr,$block_len,$debug,$verbose)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Address</name>
    <key>addr</key>
    <type>int</type>
  </param>
  <param>
    <name>Block Length</name>
    <key>block_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
    <option>
      <name>Off</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Verbose</name>
    <key>verbose</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
    <option>
      <name>Off</name>
      <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>mac_in</name>
    <type>message</type>
  </sink>
  <sink>
    <name>phy_in</name>
    <type>message</type>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>phy_out</name>
    <type>message</type>
  </source>
</block>
