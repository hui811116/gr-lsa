<?xml version="1.0"?>
<block>
  <name>LSA SU TX</name>
  <key>lsa_su_transmitter_bb</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.su_transmitter_bb($tag,$mode, $clen, $debug)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>tagname</name>
    <key>tag</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <param>
    <name>Mode</name>
    <key>mode</key>
    <value>0</value>
    <type>int</type>
    <option>
      <name>Successive</name>
      <key>0</key>
    </option>
    <option>
      <name>No queue</name>
      <key>1</key>
    </option>
    <option>
      <name>Constraint</name>
      <key>2</key>
    </option>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
    <option>
      <name>Off</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Constraint length</name>
    <key>clen</key>
    <type>int</type>
  </param>

  <sink>
    <name>msg_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
