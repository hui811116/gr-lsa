<?xml version="1.0"?>
<block>
  <name>burst tagger</name>
  <key>lsa_burst_tagger_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.burst_tagger_cc($tagname,$mult)</make>
  
  <param>
    <name>Burst Tag name</name>
    <key>tagname</key>
    <value>"burst_len"</value>
    <type>string</type>
  </param>
  <param>
    <name>Tag Scalar</name>
    <key>mult</key>
    <type>int</type>
  </param>

  
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
