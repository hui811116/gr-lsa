<?xml version="1.0"?>
<block>
  <name>LSA MAC</name>
  <key>lsa_mac</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.mac($addr)</make>
  
  
  <param>
    <name>Address</name>
    <key>addr</key>
    <type>int</type>
  </param>
  

  
  <sink>
    <name>msg_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>phy_in</name>
    <type>message</type>
  </sink>
  <sink>
    <name>from_ctrl</name>
    <type>message</type>
  </sink>

  
  <source>
    <name>msg_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>to_phy</name>
    <type>message</type>
  </source>
  <source>
    <name>to_ctrl</name>
    <type>message</type>
  </source>
</block>
