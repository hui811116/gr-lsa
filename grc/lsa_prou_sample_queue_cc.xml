<?xml version="1.0"?>
<block>
  <name>ProU sample queue</name>
  <key>lsa_prou_sample_queue_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.prou_sample_queue_cc($sense_tagname,$bps, $sps, $debug)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Sensing tagname</name>
    <key>sense_tagname</key>
    <type>string</type>
  </param>
  <param>
    <name>Bits per symbol</name>
    <key>bps</key>
    <type>int</type>
  </param>
  <param>
    <name>Samples per symbol</name>
    <key>sps</key>
    <type>int</type>
  </param>
  <param>
    <name>Debug mode</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
    <option>
      <name>Off</name>
      <key>False</key>  
    </option>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>info</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>sample</name>
    <type>complex</type>
  </source>
</block>
