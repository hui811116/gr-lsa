<?xml version="1.0"?>
<block>
  <name>Statistics Report</name>
  <key>lsa_stat_report</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.stat_report($ms,$mode)</make>
  <callback>set_period($ms)</callback>

  <param>
    <name>Period(ms)</name>
    <key>ms</key>
    <value>4000</value>
    <type>float</type>
  </param>

  <param>
    <name>Mode</name>
    <key>mode</key>
    <value>0</value>
    <type>int</type>
    <option>
      <name>ProU TX</name>
      <key>0</key>
    </option>
    <option>
      <name>ProU RX</name>
      <key>1</key>
    </option>
    <option>
      <name>SU TX</name>
      <key>3</key>
    </option>
    <option>
      <name>SU RX</name>
      <key>2</key>
    </option>
  </param>

<!--
  <sink>
    <name>strobe_in</name>
    <type>message</type>
  </sink>
  -->

  <sink>
    <name>msg_in</name>
    <type>message</type>
  </sink>

  <!--
  <source>
    <name>out</name>
    <type></type>
  </source>
  -->
  
</block>
