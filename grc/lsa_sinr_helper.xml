<?xml version="1.0"?>
<block>
  <name>SINR helper</name>
  <key>lsa_sinr_helper</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.sinr_helper($period,$hislen)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Period</name>
    <key>period</key>
    <value>2000</value>
    <type>float</type>
  </param>
  <param>
    <name>History length</name>
    <key>hislen</key>
    <value>64</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>SINR_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>oSINR_out</name>
    <type>message</type>
  </source>
  <source>
    <name>cSINR_out</name>
    <type>message</type>
  </source>
</block>
