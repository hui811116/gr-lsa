<?xml version="1.0"?>
<block>
  <name>Sync Symbol to Sample</name>
  <key>lsa_sync_symbol_to_sample_ff</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.sync_symbol_to_sample_ff($sps,$nfilts,$tagname)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Sample per symbol</name>
    <key>sps</key>
    <type>int</type>
  </param>
  <param>
    <name>Number of filters</name>
    <key>nfilts</key>
    <type>int</type>
  </param>
  <param>
    <name>Header tagname</name>
    <key>tagname</key>
    <type>string</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>freq</name>
    <type>float</type>
  </sink>
  <sink>
    <name>phase</name>
    <type>float</type>
  </sink>
  <sink>
    <name>time rate</name>
    <type>float</type>
  </sink>
  <sink>
    <name>time k</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>freq</name>
    <type>float</type>
  </source>
  <source>
    <name>phase</name>
    <type>float</type>
  </source>
  <source>
    <name>time rate</name>
    <type>float</type>
  </source>
  <source>
    <name>time k</name>
    <type>float</type>
  </source>
</block>
