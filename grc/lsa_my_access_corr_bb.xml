<?xml version="1.0"?>
<block>
  <name>My Access Corr</name>
  <key>lsa_my_access_corr_bb</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.my_access_corr_bb($access_code,$threshold)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <type>int</type>
  </param>

  <param>
    <name>Access Code</name>
    <key>access_code</key>
    <value>101110110</value>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
    <optional>1</optional>
  </source>
  <source>
    <name>info</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  
</block>
