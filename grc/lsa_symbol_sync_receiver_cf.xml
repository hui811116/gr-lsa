<?xml version="1.0"?>
<block>
  <name>Symbol Sync Receiver</name>
  <key>lsa_symbol_sync_receiver_cf</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.symbol_sync_receiver_cf($hdr_const,$debug)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  
  <param>
    <name>Header Constellation</name>
    <key>hdr_const</key>
    <type>raw</type>
  </param>
  <param>
    <name>Threshold</name>
    <key>thres</key>
    <value>10</value>
    <type>int</type>
  </param>
  <param>
    <name>Debug mode</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
    <option>
      <name>Off</name>
      <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>phase</name>
    <type>float</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>time k</name>
    <type>float</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>phase out</name>
    <type>float</type>
    <optional>1</optional>
  </source>
  <source>
    <name>time k out</name>
    <type>float</type>
    <optional>1</optional>
  </source>
  <source>
    <name>msg</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
