<?xml version="1.0"?>
<block>
  <name>Message File Sink</name>
  <key>lsa_message_file_sink</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.message_file_sink($filename,$system,$app)</make>
  <callback>update_file($filename)</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>File</name>
    <key>filename</key>
    <value></value>
    <type>file_save</type>
  </param>
  <param>
    <name>System</name>
    <key>system</key>
    <value>0</value>
    <type>int</type>
    <option>
      <name>LSA</name>
      <key>0</key>
    </option>
    <option>
      <name>SNS</name>
      <key>1</key>
    </option>
    <option>
      <name>ProU</name>
      <key>2</key>
    </option>
  </param>
  <param>
    <name>Append</name>
    <key>app</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Yes</name>
      <key>True</key>
    </option>
    <option>
      <name>No</name>
      <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>msg_in</name>
    <type>message</type>
  </sink>
</block>
