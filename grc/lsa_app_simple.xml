<?xml version="1.0"?>
<block>
  <name>App Simple</name>
  <key>lsa_app_simple</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.app_simple($dest,$debug)</make>
  
  <param>
    <name>Destination</name>
    <key>dest</key>
    <type>int</type>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
    <option>
      <name>Off</name>
      <key>False</key>
    </option>
  </param>
  
  <sink>
    <name>app_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>mac_in</name>
    <type>message</type>
  </sink>
  
  <source>
    <name>app_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>mac_out</name>
    <type>message</type>
  </source>
</block>
