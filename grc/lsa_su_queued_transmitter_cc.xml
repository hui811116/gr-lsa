<?xml version="1.0"?>
<block>
  <name>SU Queued Transmitter</name>
  <key>lsa_su_queued_transmitter_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.su_queued_transmitter_cc($max_queue_size, $sensing_tag,$index_tag,$accesscode,$lengthtagname,$hdr_const_points,$pld_const_points)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Maximum Queue Size</name>
    <key>max_queue_size</key>
    <value>1024</value>
    <type>int</type>
  </param>
  <param>
    <name>Sensing Info Tag</name>
    <key>sensing_tag</key>
    <value>"sensing"</value>
    <type>string</type>
  </param>
  <param>
    <name>Sensing Index Tag</name>
    <key>index_tag</key>
    <value>"counter"</value>
    <type>string</type>
  </param>
  <param>
    <name>Accesscode</name>
    <key>accesscode</key>
    <value>1101101101001110</value>
    <type>string</type>
  </param>
  <param>
    <name>Length Tag Name</name>
    <key>lengthtagname</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <param>
    <name>Header Constellation Points</name>
    <key>hdr_const_points</key>
    <type>complex_vector</type>
  </param>
  <param>
    <name>Payload Constellation Points</name>
    <key>pld_const_points</key>
    <type>complex_vector</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <sink>
    <name>rx_info</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>packet</name>
    <type>complex</type>
  </source>
  <source>
    <name>header</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>debug</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
