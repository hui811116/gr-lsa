<?xml version="1.0"?>
<block>
  <name>IC Critical</name>
  <key>lsa_ic_critical_cc</key>
  <category>[lsa]</category>
  <import>import lsa</import>
  <make>lsa.ic_critical_cc($prelen,$sps,$block_size,$usesync,$debug)</make>
  <!--<callback>set_threshold($thres)</callback>-->
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Preamble length</name>
    <key>prelen</key>
    <value>128*4</value>
    <type>int</type>
  </param>
  <param>
    <name>Samples per symbol</name>
    <key>sps</key>
    <type>int</type>
  </param>
  <param>
    <name>Block size</name>
    <key>block_size</key>
    <value>8192</value>
    <type>int</type>
  </param>
  <param>
    <name>Use sync</name>
    <key>usesync</key>
    <value>True</value>
    <type>bool</type>
    <option>
      <name>Yes</name>
      <key>True</key>
    </option>
    <option>
      <name>No</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
    <option>
      <name>Off</name>
      <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>phase</name>
    <type>float</type>
  </sink>
  <sink>
    <name>freq</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>comp</name>
    <type>complex</type>
  </source>
  <source>
    <name>SINR</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
